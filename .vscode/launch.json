{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Astro",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/astro/dist/cli/index.js",
      "args": ["dev"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "console": "integratedTerminal",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--inspect"]
    }
  ]
}
